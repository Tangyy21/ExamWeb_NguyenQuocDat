@model Phim
<form asp-action="Update" method="post" enctype="multipart/form-data">
    <h2>Cập nhật thông tin phim</h2>
    <hr />
    <input asp-for="ID" type="hidden" />
    <div class="col-md-8">
        <div class="form-group pb-2">
            <label>Tựa đề</label>
            <input asp-for="TuaDe" class="form-control" />
            <span asp-validation-for="TuaDe" class="text-danger"></span>
        </div>
        <div class="form-group pb-2">
            <label>Diễn viên</label>
<textarea asp-for="DienVien" class="form-control"></textarea>
            <span asp-validation-for="DienVien" class="text-danger"></span>
        </div>
        <div class="form-group pb-2">
            <label>Thể loại</label>
            <input asp-for="TrongNuoc" class="form-control" />
            <span asp-validation-for="TrongNuoc" class="text-danger"></span>
        </div>
        <div class="form-group pb-2">
            <label>Thời lượng</label>
            <input asp-for="ThoiLuong" class="form-control" />
            <span asp-validation-for="ThoiLuong" class="text-danger"></span>
        </div>
        <div class="form-group pb-2">
            <label>Giá vé</label>
            <input asp-for="GiaVe" class="form-control" />
            <span asp-validation-for="GiaVe" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary"> Update </button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
    </div>
</form>