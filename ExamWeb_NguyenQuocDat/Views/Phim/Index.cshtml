@model List<Phim>
<partial name="_Notification" />
<div class="row mb-4">
    <div class="col-md-6">
        <h2>LIST Phim</h2>
    </div>
    <div class="col-md-6 text-right">
        <a asp-action="Add" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill"></i> Thêm mới
        </a>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Tựa đề</th>
            <th>Diễn viên</th>
            <th>Thể loại</th>
            <th>Thời lượng</th>
            <th>Giá vé</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.TuaDe</td>
                <td>@x.DienVien</td>
                <td>
                                @if (x.TrongNuoc == true)
                                {
                    <a>Việt Nam</a>
                                }else{
                                <a>Nước ngoài</a>}
                </td>
                <td>@x.ThoiLuong</td>
                <td>@x.GiaVe</td>
                <td>
                    <a asp-action="Update" asp-route-id="@x.ID" class="btn btn-success">
                        <i class="bi bi-pencil-square"></i> Sửa
                    </a>
                    <a asp-action="Delete" asp-route-id="@x.ID" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Xoá
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
